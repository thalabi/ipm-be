<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="
    	http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

	<!-- Tables -->
    <changeSet id="portfolio_table" author="thalabi">
    	<createSequence sequenceName="portfolio_seq"/>
        <createTable tableName="portfolio">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="lk" type="varchar(255)"> 
                <constraints nullable="false"/> 
            </column> 
            <column name="version" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="institution" type="varchar(16)"/> 
            <column name="account_number" type="varchar(16)"/>
            <column name="name" type="varchar(32)"/> 
            <column name="currency" type="varchar(3)"/> 
        </createTable>
    </changeSet>

</databaseChangeLog>
