<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="
		http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<!-- Tables -->
    <changeSet id="user_group_table" author="thalabi">
        <createTable tableName="user_group">
            <column name="user_id" type="bigint"> 
                <constraints primaryKey="true"/>
            </column> 
            <column name="group_id" type="bigint"> 
                <constraints primaryKey="true"/>
            </column> 

        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_group" constraintName="user_group_fk_1" referencedColumnNames="id" referencedTableName="USER"/> 
        <addForeignKeyConstraint baseColumnNames="group_id" baseTableName="user_group" constraintName="user_group_fk_2" referencedColumnNames="id" referencedTableName="GROUP"/> 
    </changeSet>

</databaseChangeLog>
